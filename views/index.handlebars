<div class="container">
<div class ="container">
    <div class ="row">
        <center><div class ="col-xs-12 text-center" id ="top-bar" style="background-color:red">
            <h1>Eat Da Burger!</h1>
        </div></center>
    </div>


    <div class ="row" style="background-color:green">
        <div class="col-xs-6 text-center" class="task">
            <div>
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <center><div class="col-xs-6 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>


            <div class="col-xs-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT"
                class="button-size">
                    <input type="hidden" name="burger_id" type="text"
                    value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">
                    DEVOUR IT!</button>
                </form>
            </div>
                </center>
            {{/unless}}
            {{/each}}
            </div>

        </div>

        <br>
        <center><div class="col-xs-6 text-center" class="task" style="background-color:blue" >
            <h1>These are the items you ate last time!</h1>
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder=
                    "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div></center>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <center><p> What would you like to add to the Menu?</p>
        <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">Add Here!</button>
        </form>
            </center>
        
        </div>
    </div>
</div>
